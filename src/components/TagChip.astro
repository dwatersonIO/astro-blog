---
const { nameOfTag, selected } = Astro.props;
---

{
    selected ? (
        <a class="tag tag-selected" href={`/tags/${nameOfTag}`}>
            {nameOfTag}
        </a>
    ) : (
        <a class="tag selectable-tag" href={`/tags/${nameOfTag}`}>
            {nameOfTag}
        </a>
    )
}

<style>
.tag {
    color: var(--text-col-pil);
    padding: 2px 5px 3px 5px;
    font-size: calc(var(--text-size) * .9);
    background-color: var(--bg-col-pil);
    border-radius: 4px;
    text-decoration: none;
    margin-right: 5px;
 }
  
  .tag-selected {
    background-color: var(--brand);
    color: var(--text-col-pil);
  }
 
 .selectable-tag:hover {
  background-color: var(--brand);
}
</style>