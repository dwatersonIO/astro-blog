---
import BaseLayout from "./BaseLayout.astro";
import TagsFilter from "../components/TagsFilter.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout>
  <TagsFilter />
  <section>
    <h1>{frontmatter.title}</h1>
    <small>
      {frontmatter.tags.map((tag) => <span class="tag">{tag + " "}</span>)}
    </small>
    <slot />
  </section>
</BaseLayout>

